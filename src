    <script>
      function city() {
        let a = prompt("What city do you live in");
        let b = prompt("What temperature is it");
        let h1 = document.querySelector("h1");
        if (b < 0) {
          h1.innerHTML = "😒<br/>Currently " + b + "° in " + a;
        } else {
          h1.innerHTML = "😄<br/>Currently " + b + "° in " + a;
        }
      }
      let element = document.querySelector("button");
      element.addEventListener("click", city);
    </script>
